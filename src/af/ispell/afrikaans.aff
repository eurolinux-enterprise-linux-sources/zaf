defstringtype "latin1" "TeX" ".lat" ".iso"

bounderychars	\040	# space, in words like `Den Haag' (does not work yet)
wordchars	\047	# apostroph, in words like `foto'tjie'
wordchars	\055	# dash, in words like `dinamies-elektries'
wordchars	4	# in A4
wordchars	a	A
stringchar	à	À
stringchar	á	Á
stringchar	â	Â
stringchar	ä	Ä
wordchars	[b-c]	[B-C]
stringchar	ç	Ç
wordchars	[d-e]	[D-E]
stringchar	è	È
stringchar	é	É
stringchar	ê	Ê
stringchar	ë	Ë
wordchars	[f-i]	[F-I]
stringchar	ì	Ì
stringchar	í	Í
stringchar	î	Î
stringchar	ï	Ï
wordchars	[j-n]	[J-N]
stringchar	ñ	Ñ
wordchars	[o]	[O]
