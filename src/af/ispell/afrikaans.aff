stringchar	ú	Ú
stringchar	û	Û
stringchar	ü	Ü
wordchars	[v-z]	[V-Z]

#
# TeX/LaTeX with afrikaans babel macro's. (Repeat all stringchar definitions
# from the latin1 section. Otherwise you will get strange behaviour.)
#
altstringtype "tex" "TeX" ".tex" ".bib"

altstringchar	\\\`a	à
altstringchar	\\\'a	á
altstringchar	\\\^a	â
altstringchar	\"a	ä
altstringchar	\\c{c}	ç
altstringchar	\\\`e	è
altstringchar	\\\'e	é
altstringchar	\\\^e	ê
altstringchar	\"e	ë
altstringchar	\\\`i	ì
altstringchar	\\\'i	í
altstringchar	\\\^i	î
altstringchar	\"i	ï
altstringchar	\\\~n	ñ
altstringchar	\\\`o	ò
altstringchar	\\\'o	ó
altstringchar	\\\^o	ô
altstringchar	\"o	ö
altstringchar	\\\`u	ù
altstringchar	\\\'u	ú
altstringchar	\\\^u	û
altstringchar	\"u	ü
altstringchar	\"U	Ü

